<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"

   app:cardBackgroundColor="#FFF6A5">

   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="90dp"
      android:layout_marginTop="650dp"
      android:background="#A3A3A3">


      <TextView
         android:id="@+id/base_life"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="20dp"
         android:layout_marginBottom="30dp"
         android:text="10/10"
         android:textSize="20dp"
         android:textStyle="bold"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toLeftOf="parent" />

      <ImageView
         android:id="@+id/tower_1"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="30dp"
         android:layout_marginBottom="22dp"
         android:src="@drawable/itachi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/base_life" />

      <ImageView
         android:id="@+id/tower_2"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="22dp"
         android:src="@drawable/itachi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/tower_1" />

      <ImageView
         android:id="@+id/tower_3"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="22dp"
         android:src="@drawable/itachi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/tower_2" />

      <ImageView
         android:id="@+id/tower_4"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="22dp"
         android:src="@drawable/itachi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/tower_3" />

      <ImageView
         android:id="@+id/tower_5"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="22dp"
         android:src="@drawable/itachi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/tower_4" />

      <ImageView
         android:id="@+id/img_settings"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="30dp"
         android:layout_marginBottom="22dp"
         android:src="@drawable/settings_icon"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@id/tower_5" />


   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>