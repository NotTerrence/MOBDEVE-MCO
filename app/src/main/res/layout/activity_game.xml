<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="#FFFFFF">


   <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="68dp"
      android:background="#9E9E9E"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent">

      <TextView
         android:id="@+id/base_life"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="20dp"
         android:text="10/10"
         android:textSize="20sp"
         android:textStyle="bold"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         tools:layout_editor_absoluteX="16dp"
         tools:layout_editor_absoluteY="21dp" />

      <ImageView
         android:id="@+id/tower_1"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginLeft="154dp"
         android:layout_marginBottom="8dp"
         android:src="@drawable/itachi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/base_life" />

      <ImageView
         android:id="@+id/tower_2"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="8dp"
         android:src="@drawable/itachi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/tower_1"
         tools:layout_editor_absoluteX="340dp"
         tools:layout_editor_absoluteY="9dp" />

      <ImageView
         android:id="@+id/tower_3"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="8dp"
         android:src="@drawable/itachi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/tower_2" />

      <ImageView
         android:id="@+id/tower_4"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="8dp"
         android:src="@drawable/itachi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/tower_3" />

      <ImageView
         android:id="@+id/tower_5"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginBottom="8dp"
         android:src="@drawable/itachi"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/tower_4" />

      <ImageView
         android:id="@+id/img_settings"
         android:layout_width="45dp"
         android:layout_height="45dp"
         android:layout_marginLeft="164dp"
         android:layout_marginBottom="12dp"
         android:src="@drawable/settings_icon"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/tower_5" />

   </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>